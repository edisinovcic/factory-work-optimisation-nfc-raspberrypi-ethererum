{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Build Project",
          "program": "${workspaceFolder}/src/app.ts",
          "sourceMaps": true,
          "smartStep": true,
          "preLaunchTask": "npm: build",
          "internalConsoleOptions": "openOnSessionStart",
          "envFile": "${workspaceFolder}/.env",
          "outFiles": [
              "${workspaceFolder}/dist/**/*.js"
          ]
      }
  ]
}